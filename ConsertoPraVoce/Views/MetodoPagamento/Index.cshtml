@model IEnumerable<ConsertoPraVoce.Model.MetodoPagamento>

@{
    ViewBag.Title = "Index";
}

<div class="row gutter">
	<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
		<div class="panel panel-light">
			<div class="panel-heading">
				<h4>MetodoPagamento</h4>
			</div>

			<div class="panel-body">
				<p>
					@Html.ActionLink("Cadastrar", "Create", new object { }, new { @class = "btn btn-default" })
				</p>
				<div class="table-responsive">
					<table id="copy-print-csv" class="table table-striped table-bordered no-margin">
						<thead>
                            <tr>
        <th>
            @Html.DisplayNameFor(model => model.Descricao)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Pagamentos)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Taxa)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Prazo)
        </th>
        <th></th>
    </tr>
    </thead>
    <tbody>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Descricao)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Pagamentos)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Taxa)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Prazo)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Detalhes", "Details", new { id=item.Id }) |
            @Html.ActionLink("Deletar", "Delete", new { id=item.Id })
        </td>
    </tr>
}
</tbody>
</table>
