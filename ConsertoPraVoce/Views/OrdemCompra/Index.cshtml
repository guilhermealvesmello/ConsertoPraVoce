@model IEnumerable<ConsertoPraVoce.Model.OrdemCompra>

@{
    ViewBag.Title = "Index";
}

<div class="row gutter">
	<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
		<div class="panel panel-light">
			<div class="panel-heading">
				<h4>OrdemCompra</h4>
			</div>

			<div class="panel-body">
				<p>
					@Html.ActionLink("Cadastrar", "Create", new object { }, new { @class = "btn btn-default" })
				</p>
				<div class="table-responsive">
					<table id="responsiveTable" class="table table-striped table-bordered no-margin" data-page-length='25'>
						<thead>
                            <tr>
																										<th>
											@Html.DisplayNameFor(model => model.DescricaoCurta)
										</th>
																										<th>
											@Html.DisplayNameFor(model => model.DescricaoLonga)
										</th>
																										<th>
											@Html.DisplayNameFor(model => model.DataCriacao)
										</th>
																										<th>
											@Html.DisplayNameFor(model => model.DataEdicao)
										</th>
																										<th>
											@Html.DisplayNameFor(model => model.Fornecedor.Nome)
										</th>
																																		<th></th>
									</tr>
									</thead>
									<tbody>

								@foreach (var item in Model) {
									<tr>
																										<td>
											@Html.DisplayFor(modelItem => item.DescricaoCurta)
										</td>
																										<td>
											@Html.DisplayFor(modelItem => item.DescricaoLonga)
										</td>
																										<td>
											@Html.DisplayFor(modelItem => item.DataCriacao)
										</td>
																										<td>
											@Html.DisplayFor(modelItem => item.DataEdicao)
										</td>
																										<td>
											@Html.DisplayFor(modelItem => item.Fornecedor.Nome)
										</td>
																																		<td>
											@Html.ActionLink("Editar", "Edit", new { id=item.Id }) |
											@Html.ActionLink("Detalhes", "Details", new { id=item.Id }) |
											@Html.ActionLink("Deletar", "Delete", new { id=item.Id })
										</td>
																	</tr>
								}
					</tbody>
					</table>
				</div>
			</div>
		</div>
	</div>
</div>
