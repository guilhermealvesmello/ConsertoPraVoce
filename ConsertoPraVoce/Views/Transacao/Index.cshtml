@model IEnumerable<ConsertoPraVoce.Model.Transacao>

@{
	ViewBag.Title = "Index";
}

<div class="row gutter">
	<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
		<div class="panel panel-light">
			<div class="panel-heading">
				<h4>Transacao</h4>
			</div>

			<div class="panel-body">
				<p>
					@Html.ActionLink("Cadastrar", "Create", new object { }, new { @class = "btn btn-default" })
				</p>
				<div class="table-responsive">
					<table id="responsiveTable" class="table table-striped table-bordered no-margin" data-page-length='25'>
						<thead>
							<tr>
								<th>
									@Html.DisplayNameFor(model => model.DataTransacao)
								</th>
								<th>
									@Html.DisplayNameFor(model => model.Descricao)
								</th>
								<th>
									@Html.DisplayNameFor(model => model.ValorBruto)
								</th>
								<th>
									@Html.DisplayNameFor(model => model.PagamentoRecorrente)
								</th>
								<th>
									@Html.DisplayNameFor(model => model.Detalhes)
								</th>								
								<th>
									@Html.DisplayNameFor(model => model.CategoriaTransacao.Descricao)
								</th>
								<th>
									@Html.DisplayNameFor(model => model.Cliente.Nome)
								</th>
								<th>
									@Html.DisplayNameFor(model => model.Conta.Descricao)
								</th>
								<th>
									@Html.DisplayNameFor(model => model.Parcelas)
								</th>
								<th>
									@Html.DisplayNameFor(model => model.OrdemCompra.DescricaoCurta)
								</th>
								<th>
									@Html.DisplayNameFor(model => model.OrdemServico.DescricaoCurta)
								</th>
								<th></th>
							</tr>
						</thead>
						<tbody>

							@foreach (var item in Model)
							{
								<tr>
									<td>
										@Html.DisplayFor(modelItem => item.DataTransacao)
									</td>
									<td>
										@Html.DisplayFor(modelItem => item.Descricao)
									</td>
									<td>
										@Html.DisplayFor(modelItem => item.ValorBruto)
									</td>
									<td>
										@Html.DisplayFor(modelItem => item.PagamentoRecorrente)
									</td>
									<td>
										@Html.DisplayFor(modelItem => item.Detalhes)
									</td>									
									<td>
										@Html.DisplayFor(modelItem => item.CategoriaTransacao.Descricao)
									</td>
									<td>
										@Html.DisplayFor(modelItem => item.Cliente.Nome)
									</td>
									<td>
										@Html.DisplayFor(modelItem => item.Conta.Descricao)
									</td>
									<td>
										@Html.DisplayFor(modelItem => item.Parcelas)
									</td>
									<td>
										@Html.DisplayFor(modelItem => item.OrdemCompra.DescricaoCurta)
									</td>
									<td>
										@Html.DisplayFor(modelItem => item.OrdemServico.DescricaoCurta)
									</td>
									<td>
										@Html.ActionLink("Editar", "Edit", new { id = item.Id }) |
										@Html.ActionLink("Detalhes", "Details", new { id = item.Id }) |
										@Html.ActionLink("Deletar", "Delete", new { id = item.Id })
									</td>
								</tr>
							}
						</tbody>
					</table>
				</div>
			</div>
		</div>
	</div>
</div>
