@model IEnumerable<ConsertoPraVoce.Model.Cliente>

@{
	ViewBag.Title = "Index";
}



<div class="row gutter">
	<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
		<div class="panel panel-light">
			<div class="panel-heading">
				<h4>Clientes</h4>
			</div>

			<div class="panel-body">
				<p>
					@Html.ActionLink("Cadastrar", "Create", new object { }, new { @class = "btn btn-default" })
				</p>
				<div class="table-responsive">
					<table id="copy-print-csv" class="table table-striped table-bordered no-margin">
						<thead>
							<tr>
								<th>
									@Html.DisplayNameFor(model => model.Nome)
								</th>
								<th>
									@Html.DisplayNameFor(model => model.Email)
								</th>
								<th>
									@Html.DisplayNameFor(model => model.Telefone1)
								</th>
								<th>
									@Html.DisplayNameFor(model => model.Telefone2)
								</th>
								<th>
									@Html.DisplayNameFor(model => model.Aniversario)
								</th>
								<th>
									@Html.DisplayNameFor(model => model.Observacao)
								</th>
								<th></th>
							</tr>
						</thead>
						<tbody>
							@foreach (var item in Model)
							{
								<tr>
									<td>
										@Html.DisplayFor(modelItem => item.Nome)
									</td>
									<td>
										@Html.DisplayFor(modelItem => item.Email)
									</td>
									<td>
										@Html.DisplayFor(modelItem => item.Telefone1)
									</td>
									<td>
										@Html.DisplayFor(modelItem => item.Telefone2)
									</td>
									<td>
										@Html.DisplayFor(modelItem => item.Aniversario)
									</td>
									<td>
										@Html.DisplayFor(modelItem => item.Observacao)
									</td>
									<td>
										@Html.ActionLink("Editar", "Edit", new { id = item.Id }) |
										@Html.ActionLink("Detalhes", "Details", new { id = item.Id }) |
										@Html.ActionLink("Excluir", "Delete", new { id = item.Id })
									</td>
								</tr>
							}
						</tbody>
					</table>
				</div>
			</div>
		</div>
	</div>
</div>