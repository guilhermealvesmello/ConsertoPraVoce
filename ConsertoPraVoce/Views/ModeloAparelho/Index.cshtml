@model IEnumerable<ConsertoPraVoce.Model.ModeloAparelho>

@{
	ViewBag.Title = "Index";
}

<div class="row gutter">
	<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
		<div class="panel panel-light">
			<div class="panel-heading">
				<h4>Modelos de Aparelhos</h4>
			</div>

			<div class="panel-body">
				<p>
					@Html.ActionLink("Cadastrar", "Create", new object { }, new { @class = "btn btn-default" })
				</p>
				<div class="table-responsive">
					<table id="responsiveTable" class="table table-striped table-bordered no-margin" data-page-length='25'>
						<thead>
							<tr>
								<th>
									@Html.DisplayNameFor(model => model.Marca.Descricao)
								</th>
								<th>
									@Html.DisplayNameFor(model => model.TipoAparelho.Descricao)
								</th>
								<th>
									@Html.DisplayNameFor(model => model.Descricao)
								</th>
								<th>
									@Html.DisplayNameFor(model => model.NumeroModelo)
								</th>
								
								<th></th>
							</tr>
						</thead>
						<tbody>

							@foreach (var item in Model)
							{
								<tr>
									<td>
										@Html.DisplayFor(modelItem => item.Marca.Descricao)
									</td>
									<td>
										@Html.DisplayFor(modelItem => item.TipoAparelho.Descricao)
									</td>
									<td>
										@Html.DisplayFor(modelItem => item.Descricao)
									</td>
									<td>
										@Html.DisplayFor(modelItem => item.NumeroModelo)
									</td>									
									<td>										
										@Html.ActionLink("Editar", "Edit", new { id = item.Id }) |
										@*@Html.ActionLink("Detalhes", "Details", new { id = item.Id }, new { @class = "" }) |*@
										@Html.ActionLink("Deletar", "Delete", new { id = item.Id })
									</td>
								</tr>
							}
						</tbody>
					</table>
				</div>
