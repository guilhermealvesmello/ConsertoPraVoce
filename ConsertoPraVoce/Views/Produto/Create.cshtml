					@Html.DropDownList("IdCor", null, "Selecionar", htmlAttributes: new { @class = "form-control" })
					@Html.ValidationMessageFor(model => model.IdCor, "", new { @class = "text-danger" })
				</div>
			</div>

			@*<div class="form-group">
