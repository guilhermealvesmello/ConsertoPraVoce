@model IEnumerable<ConsertoPraVoce.Model.PrecoServico>

@{
	ViewBag.Title = "Index";
}

<div class="row gutter">
	<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
		<div class="panel panel-light">
			<div class="panel-heading">
				<h4>PrecoServico</h4>
			</div>

			<div class="panel-body">
				<p>
					@Html.ActionLink("Cadastrar", "Create", new object { }, new { @class = "btn btn-default" })
				</p>
				<div class="table-responsive">
					<table id="copy-print-csv" class="table table-striped table-bordered no-margin">
						<thead>
							<tr>
								<th>
									@Html.DisplayNameFor(model => model.Servico.Descricao)
								</th>
								<th>
									@Html.DisplayNameFor(model => model.DataAtualizacao)
								</th>
								<th>
									@Html.DisplayNameFor(model => model.PrecoDinheiro)
								</th>
								<th>
									@Html.DisplayNameFor(model => model.PrecoDebito)
								</th>
								<th>
									@Html.DisplayNameFor(model => model.PrecoCredito)
								</th>

								<th></th>
							</tr>
						</thead>
						<tbody>

							@foreach (var item in Model)
							{
								<tr>
									<td>
										@Html.DisplayFor(modelItem => item.Servico.Descricao)
									</td>
									<td>
										@Html.DisplayFor(modelItem => item.DataAtualizacao)
									</td>
									<td>
										@Html.DisplayFor(modelItem => item.PrecoDinheiro)
									</td>
									<td>
										@Html.DisplayFor(modelItem => item.PrecoDebito)
									</td>
									<td>
										@Html.DisplayFor(modelItem => item.PrecoCredito)
									</td>

									<td>
										@*<a href="@Url.Action("Create", "Edit")" class="btn btn-primary">
											<i class="icon-pencil icon-white"></i>
											<span>
												<strong>Create</strong>
											</span>
										</a>*@


										@Html.ActionLink("Editar", "Edit", new { id = item.Id }) |
										@Html.ActionLink("Detalhes", "Details", new { id = item.Id }) |
										@Html.ActionLink("Deletar", "Delete", new { id = item.Id })
									</td>
								</tr>
							}
						</tbody>
					</table>
				</div>
			</div>
		</div>
	</div>
</div>