@model IEnumerable<ConsertoPraVoce.Model.Cliente>

@{
	ViewBag.Title = "Index";
}

<div class="row gutter">
	<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
		<div class="panel panel-light">
			<div class="panel-heading">
				<h4>Cliente</h4>
			</div>

			<div class="panel-body">
				<p>
					@Html.ActionLink("Cadastrar", "Create", new object { }, new { @class = "btn btn-default" })
				</p>
				<div class="table-responsive">
					<table id="responsiveTable" class="table table-striped table-bordered no-margin" data-page-length='25'>
						<thead>
							<tr>
								<th>
									@Html.DisplayNameFor(model => model.Nome)
								</th>
								@*<th>
										@Html.DisplayNameFor(model => model.Email)
									</th>*@
								<th>
									@Html.DisplayNameFor(model => model.Telefone1)
								</th>
								<th>
									@Html.DisplayNameFor(model => model.Telefone2)
								</th>
								<th>
									@Html.DisplayNameFor(model => model.ModeloAparelho.Descricao)
								</th>
								<th>
									@Html.DisplayNameFor(model => model.Notas)
								</th>
								<th>
									@Html.DisplayNameFor(model => model.Data)
								</th>
								<th></th>
							</tr>
						</thead>
						<tbody>

							@foreach (var item in Model)
							{
								<tr>
									<td style="white-space:nowrap;">
										@Html.DisplayFor(modelItem => item.Nome)
									</td>
									@*<td>
											@Html.DisplayFor(modelItem => item.Email)
										</td>*@
									<td style="white-space:nowrap;">
										@Html.DisplayFor(modelItem => item.Telefone1)
									</td>
									<td style="white-space:nowrap;">
										@Html.DisplayFor(modelItem => item.Telefone2)
									</td>
									<td style="white-space:nowrap;">
										@Html.DisplayFor(modelItem => item.ModeloAparelho.Descricao)
									</td>
									<td>
										@Html.DisplayFor(modelItem => item.Notas)
									</td>
									<td>
										@if (item.Data.HasValue)
										{
											@*<span style="visibility:hidden; height:0px" > @item.Data.Value.ToString("yyyyMMddHHmmss")</span>*@
											@item.Data.Value.ToString("dd/MM/yyyy");
										}
									</td>
									<td style="white-space:nowrap;">
										@Html.ActionLink("Editar", "Edit", new { id = item.Id }) |
										@Html.ActionLink("Detalhes", "Details", new { id = item.Id }) |
										@Html.ActionLink("Deletar", "Delete", new { id = item.Id })
									</td>
								</tr>
							}
						</tbody>
					</table>
				</div>
